@model IEnumerable<PracticalEleven.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<p>
    <button id="add" class="btn btn-sm btn-primary">Add Employee</button>
</p>


<label id="lbl"></label>

@if (TempData["UpdateSuccess"] != null)
{
    <p class="text-success toast-msg">@TempData["UpdateSuccess"]</p>
}
@if (TempData["AddSuccess"] != null)
{
    <p class="text-success toast-msg">@TempData["AddSuccess"]</p>
}

<table class="table">
    <tr class="table-dark text-center">
        <th>
            @Html.DisplayNameFor(Model => Model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Address)
        </th>
        <th>
            Action
        </th>
    </tr>

    @{
        Html.RenderPartial("_IndexPartialView");
    }

</table>

<label id="detailslbl"></label>

@section scripts {
    <script>
        $(document).ready(function () {
            $(document).on("click", "#add", function () {
                $.ajax({
                    url: "@Url.Content("~/Test2/Create")",
                    method: "GET",
                    data: { id: $(this).data("detailslbl") },
                    success: function (data) {
                        if (data) {

                            document.getElementById("lbl").innerHTML = data;
                        }
                    }
                });
            });
        });
        $(document).ready(function () {
            $(document).on("click", ".edit", function () {
                $.ajax({
                    url: "@Url.Content("~/Test2/Edit")",
                    method: "GET",
                    data: { id: $(this).data("id") },
                    success: function (data) {
                        if (data) {

                            document.getElementById("lbl").innerHTML = data;
                        }
                    }
                });
            });
        });

        $(document).ready(function () {
            $(document).on("click", ".details", function () {
                $.ajax({
                    url: "@Url.Content("~/Test2/Details")",
                    method: "GET",
                    data: { id: $(this).data("id") },
                    success: function (data) {
                        if (data) {

                            document.getElementById("detailslbl").innerHTML = data;
                        }
                    }
                });
            });
        });

         $(document).ready(function () {
             $(document).on("click",".delete-item",function () {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't delete this record?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {

                    if (result.isConfirmed) {

                        $.ajax({
                            url: "@Url.Content("~/Test2/Delete")",
                            method: "POST",
                            data: { id: $(this).data("id") },
                            success: function (data) {
                                if (data) {
                                    Swal.fire(
                                        'Deleted!',
                                        'Your record has been deleted.',
                                        'success'
                                    )
                                    location.reload();
                                }
                            },
                            error: function (err) {
                                Swal.fire(
                                    'Opps!',
                                    'Something went wrong!',
                                    'error'
                                )
                            }

                        })
                    }
                })
            })
        })

        $(document).ready(function () {
                setTimeout(function () {
                    $('.toast-msg').delay(2000).hide(0);
                });
            });

    </script>
}